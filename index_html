      .catch(error => {
        console.error('×©×’×™××” ×‘×˜×¢×™× ×ª × ×•×©××™×:', error);
        const select = document.getElementById('topicSelect');
        select.innerHTML = '<option value="">× ×•×©××™× ×œ× × ×˜×¢× ×•</option>';
